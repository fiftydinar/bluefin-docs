# Docusaurus best practices for npm configuration

# Use legacy peer dependencies resolver
# Required for React 19 compatibility until ecosystem catches up
legacy-peer-deps=false

# Use package-lock.json v3 format (npm 7+)
lockfile-version=3

# Automatically install peer dependencies
# Disabled because we use npm overrides instead
auto-install-peers=false

# Prefer offline cached packages when available
prefer-offline=true

# Save exact versions (no ^ or ~) for reproducible builds
save-exact=false

# Engine-strict mode - enforce node version from package.json
engine-strict=true
